@model CleanArch.Aplication.ViewModels.InvoiceViewModel

@{
    ViewData["Title"] = "Register new Invoice";
}


<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />


        <vc:summary />



        <div class="form-group"
        <label asp-for="CustomerId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @* <input asp-for="CustomerId" class="form-control"/> *@
                @Html.DropDownListFor(model => model.CustomerId , (SelectList)ViewBag.InvoiceOptions, new{ @class = "form-control"}  )
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group"
        <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

 
        

        <div class="form-group"
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success"/>
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>


</form>
